<h1>Paciente {{dados.nome}}</h1>

<div class="car_myDiv">
    <div class="car_myDiv1">
        <div class="car_myDiv2">
            <form class="row g-3" action="/form-pacient/editar-paciente" method="POST">
                <div class="col-md-12">
                    <a href="/form-pacient" class="btn btn-primary" id="link">Voltar</a><br>
                </div>
                <div class="col-md-3">
                    <label for="id" class="form-label">Sequência:</label>
                    <input type="text" class="form-control" name="id" value="{{dados.id}}" readonly>
                </div>
                <div class="col-md-7">
                    <label for="nome" class="form-label">Nome:</label>
                    <input type="text" class="form-control" name="nome" value="{{dados.nome}}">
                </div>
                 <div class="col-md-2">
                    <label for="idade" class="form-label">Idade:</label>
                    <input type="text" class="form-control" name="idade" value="{{dados.idade}}">
                </div>
                <div class="col-4">
                    <label for="cidade" class="form-label">Cidade:</label>
                    <input type="text" class="form-control" name="cidade" value="{{dados.cidade}}">
                </div>
                <div class="col-md-7">
                    <label for="endereco" class="form-label">Endereço:</label>
                    <input type="text" class="form-control" name="endereco" value="{{dados.endereco}}">
                </div>
                <div class="col-4">
                    <label for="estado" class="form-label">Estado:</label>
                    <input type="text" class="form-control" name="estado" value="{{dados.estado}}">
                </div>
                <div class="col-md-8">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control" name="email" value="{{dados.email}}">
                </div>
                <div class="col-md-6">
                    <label for="altura" class="form-label">Altura:</label>
                    <input type="text" class="form-control" name="altura" value="{{dados.altura}}">
                </div>
                <div class="col-md-4">
                    <label for="peso" class="form-label">Peso:</label>
                    <input type="text" class="form-control" name="peso" value="{{dados.peso}}">
                </div>
                <div class="col-md-2">
                    <label for="imc" class="form-label">IMC:</label>
                    <input type="text" class="form-control" name="imc" value="{{dados.imc}}" readonly>
                </div>
                <br>
                <div class="col-md-12">
                     <a href="/form-pacient/excluir/{{dados.id}}" class="btn btn-danger link" id="link">Excluir</a>
                    <button type="submit" class="btn btn-warning" id="link">Editar</button>           
                </div>
            </form>
        </div>
    </div>
</div>