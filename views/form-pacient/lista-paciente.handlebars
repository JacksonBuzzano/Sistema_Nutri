<h1>Lista de Paciente</h1>

<main>
    <div class="container-sm">
        <section class="container">
            <h2>Meus pacientes</h2>
            <label for="filtrar-tabela">Filtrar:</label>
            <input type="text" name="filtro" id="filtrar-tabela" placeholder="Digite o nome do paciente"
                class="campo campo-medio">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Cidade</th>
                        <th>EndereÃ§o</th>
                        <th>Estado</th>
                        <th>E-mail</th>
                        <th>Peso(kg)</th>
                        <th>Altura(m)</th>
                        <th>IMC</th>
                    </tr>
                </thead>
                <tbody id="tabela-pacientes">
                    {{#each dados}}
                    <tr class="paciente" id="primeiro-paciente">
                        <td class="info-nome">{{nome}}</td>
                        <td class="info-peso">{{cidade}}</td>
                        <td class="info-altura">{{endereco}}</td>
                        <td class="info-gordura">{{estado}}</td>
                        <td class="info-imc">{{email}}</td>
                        <td class="info-altura">{{peso}}</td>
                        <td class="info-gordura">{{altura}}</td>
                        <td class="info-imc">{{imc}}</td>
                        <td><a href="form-pacient/editar/{{id}}"><button class="btn btn-success">Selecionar</button></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            <input type="text" name="filtro" id="filtrar-api" placeholder="Pesquisar cliente" class="campo">
            <button id="buscar-pacientes" class="btn btn-primary">Buscar Paciente</button>
            <a href="/form-pacient/cad-paciente"><button id="cadastar" class="btn btn-primary">Cadastrar</button></a>
        </section>
    </div>
</main>